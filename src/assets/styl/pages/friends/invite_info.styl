.friend-invite-page
  padding: 16PX
  
  .invite-info-card
    background: #fff
    border-radius: 12PX
    padding: 24PX
    box-shadow: 0 2PX 8PX var(--border-color)

    .avatar-section
      display: flex
      flex-direction: column
      align-items: center
      margin-bottom: 24PX

      .avatar
        width: 80PX
        height: 80PX
        border-radius: 50%
        margin-bottom: 12PX

      .nickname
        font-size: 18PX
        font-weight: 500
        color: var(--text-color)

    .info-section
      .info-item
        display: flex
        justify-content: space-between
        align-items: center
        padding: 12PX 0
        border-bottom: 1PX solid var(--border-color)

        .label
          color: var(--secondary-text)
          font-size: 14PX

        .value
          color: var(--text-color)
          font-size: 14PX

    .accept-btn
      margin-top: 32PX
      width: 100%
      background: var(--primary-bg-color)
      color: var(--primary-bg-text-color)
      border-radius: 8PX