.create-account-book__page {
  
  .btn-group {
    position: fixed
    bottom: 0
  }

  .edit-category-component {
    position: fixed
    bottom: 0
    min-height: 400PX
    max-height: 780PX 
    width: 100%
    z-index: 1000
    > .edit-category__mask {
      background: rgba(0,0,0, 0.5)
      position: absolute
      bottom: 0
      height: 100vh
      width: 100%
      z-index: 99
    }
    > .edit-category__main {
      background: #f9f9f9
      border-radius: 6PX 6PX 0 0
      display: flex
      flex-direction: column
      position: absolute
      bottom: 0
      left: 0
      width: 100%
      height: 500PX
      z-index: 100

      animation: edit-category-animation 0.5s;
      -webkit-animation: edit-category-animation 0.5s;
      animation-fill-mode: forwards;

      .edit-category__main-title {
        padding: 12PX;
        border-bottom: 1px solid $borderColor;
      }
      .edit-category__main-content {
        overflow-y: auto
        flex: 1
      }
      .edit-category-item.active {
        background-color: #e8e8e8;
      }
    }

    .selected-category-icon image {
      width: 40PX
      height: 40PX
    } 

    .icon-list {
      display: grid;
      grid-template-columns: repeat(5, 1fr);
      grid-gap: 10px;
      .icon .active {
        background-color: #dadada
      }
      image {
        width: 50PX
        height: 50PX
      }
    }

    .button-group {
      .btn {
        // border: 1px solid var(--primary-bg-color)
        padding: 8px 28px;
      }
      .ok-btn {
        background: #0ba71e;
        color: white;
        border-radius: 26px;
      }
      .cancel-btn {
        background: #8a8e8b;
        color: white;
        border-radius: 26px;
      }

    }
    
    > .list__item {
      display: inline-block
      text-align: center
      width: 20%
      margin: 12PX 0
      image {
        width: 30PX
        height: 30PX
      }
    }
    > .edit-category__header {
      font-size: 16PX
      margin: 12PX 
    }

    @-webkit-keyframes edit-category-animation
    {
        0%   {height: 0%}
        100% {height: 500PX}
    }
  }
}

.category-list__component {
  .list {
    background: #ffffff
    margin: 12PX
    border-radius: 21PX
    padding-top: 16PX
    padding-bottom: 16PX

    .parent-category {
      padding: 8PX
      border-bottom: 1px solid var(--border-color)
    }
    
    image {
      width: 25PX
      height: 25PX
    }
  }
  .tab-checkbox {
    display: flex
    background: #ffffff
    margin: 12PX
    // border-radius: 21PX
    .checkbox-title {
      padding: 8PX
      text-align: center
      // border-bottom: 1px solid #ccc
      // border-radius: 12PX
      .expend.active {
        padding: 8PX
        border-bottom: 4px solid green
      }
      .income.active {
        padding: 8PX
        border-bottom: 4px solid red
      }
    }
  }
    
}